{
  "compilerOptions": {
    "pretty": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "allowJs": true,
    "jsx": "react",
    "lib": ["dom", "es6", "esnext"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./build"
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "sample/**/*.ts", "e2e"]
}
